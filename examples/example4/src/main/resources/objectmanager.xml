<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<beans xmlns="http://org.om.dynabean">
	<bean name="jcrsessionfactory">
		<class>org.om.core.impl.persistence.jcr.sessionfactory.impl.PropertiesConfiguredJCRSessionFactory</class>
		<arguments>
			<argument>
				<value>/objectmanagerjcr.properties</value>
			</argument>
		</arguments>
	</bean>
	<bean name="jcrpersistencecontext">
		<class>org.om.core.impl.persistence.jcr.JcrPersistenceContext</class>
		<arguments>
			<argument reference="true">
				<value>jcrsessionfactory</value>
			</argument>
		</arguments>
	</bean>
	<bean name="persistencedelegatefactory">
		<class>org.om.jcrcache.impl.LRUJCRPersistenceDelegateFactory</class>
		<arguments>
			<argument reference="true">
				<value>actualpersistencedelegatefactory</value>
			</argument>
			<argument reference="false" valuetype="int">
				<value>10</value>
			</argument>
		</arguments>
	</bean>
	<bean name="actualpersistencedelegatefactory">
		<class>org.om.core.impl.persistence.jcr.JcrPersistenceDelegateFactory</class>
	</bean>
	<bean name="omsessionfactory">
		<class>org.om.core.impl.session.factory.DefaultSessionFactory</class>
		<arguments>
			<argument reference="true">
				<value>persistencedelegatefactory</value>
			</argument>
		</arguments>
	</bean>
	<filter>
		<class>org.om.dao.annotation.transactional.filter.TransactionalIOCInstantiationFilter</class>
	</filter>
	<filter>
		<class>com.khubla.simpleioc.filter.impl.JSR330Filter</class>
	</filter>
 	<package>
		<name>com.om.examples.example4</name>
	</package>
</beans>

